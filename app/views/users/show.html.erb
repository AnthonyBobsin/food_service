<% provide(:title, @user.name) %>
<div class="container homemain">
  <h1 id="usermid">
    <%= gravatar_for @user %> 
    <%= @user.name %>
  </h1>
  <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1
          col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
      <!-- If user is a service display menu -->
      <% if @user.service %>
          <% if @menu %>
              <%= render @menu %>
          <% elsif current_user == @user %>
              <p>You haven't created a menu yet. <%= link_to "Click here", 
                  edit_menu_path %> to create your menu.</p>
          <% end %>
      <% end %>
    </div>
  </div>
</div>
